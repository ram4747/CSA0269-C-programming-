#include <stdio.h>

int main() {
   int amount, notes;
   
   printf("Enter an amount: ");
   scanf("%d", &amount);

   // Calculate the number of Rs. 500 notes required
   notes = amount / 500;
   amount %= 500;
   printf("Rs. 500 notes: %d\n", notes);

   // Calculate the number of Rs. 100 notes required
   notes = amount / 100;
   amount %= 100;
   printf("Rs. 100 notes: %d\n", notes);

   // Calculate the number of Rs. 50 notes required
   notes = amount / 50;
   amount %= 50;
   printf("Rs. 50 notes: %d\n", notes);

   // Calculate the number of Rs. 20 notes required
   notes = amount / 20;
   amount %= 20;
   printf("Rs. 20 notes: %d\n", notes);

   // Calculate the number of Rs. 10 notes required
   notes = amount / 10;
   amount %= 10;
   printf("Rs. 10 notes: %d\n", notes);

   // Calculate the number of Rs. 5 notes required
   notes = amount / 5;
   amount %= 5;
   printf("Rs. 5 notes: %d\n", notes);

   // Calculate the number of Rs. 2 notes required
   notes = amount / 2;
   amount %= 2;
   printf("Rs. 2 notes: %d\n", notes);

   // Calculate the number of Rs. 1 notes required
   notes = amount / 1;
   printf("Rs. 1 notes: %d\n", notes);

   return 0;
}
